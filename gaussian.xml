<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE simulator [
  <!ATTLIST algorithm id ID #IMPLIED>
  <!ATTLIST problem id ID #IMPLIED>
  <!ATTLIST measurements id ID #IMPLIED>
]>

<simulator>
    <simulations>
      <simulation>
        <algorithm class="PSO.PSO">
	   <topology class="PSO.VonNeumannTopology"/>
	   <velocityUpdate class="PSO.GaussianVelocityUpdate"/>
	   <addStoppingCondition class="StoppingCondition.MaximumIterations" iterations="100"/>
	</algorithm>
        <problem class="Problem.FunctionMinimisationProblem">
	  <function class="Functions.NastyBenchmark"/>
	</problem>
        <measurements class="Simulator.MeasurementSuite" file="data/gaussian.txt" resolution="1">
	  <addMeasurement class="Measurement.FunctionOptimisationError"/>
	</measurements>
      </simulation>
    </simulations>
</simulator>
