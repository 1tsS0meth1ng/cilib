<?xml version="1.0"?>

<simulator>
	<simulation>
		<algorithm class="pso.PSO">
<!--			<addStoppingCondition class="stoppingcondition.MaximumFitnessEvaluations">
				<maximumFitnessEvaluations value="40000"/>
			</addStoppingCondition>-->
			<addStoppingCondition class="stoppingcondition.MaximumIterations" iterations="500"/>
			<particles value="40" />
			<topology class="entity.topologies.GBestTopology"/>
			<prototypeParticle class="pso.particle.StandardParticle">
				<!--<positionUpdateStrategy class="pso.positionupdatestrategies.StandardPositionUpdateStrategy"/>-->
				<velocityUpdateStrategy class="pso.velocityupdatestrategies.StandardVelocityUpdate">
				<vMax class="controlparameterupdatestrategies.ConstantUpdateStrategy" parameter="15"/>
				</velocityUpdateStrategy>
			</prototypeParticle>
		</algorithm>

		<problem class="problem.FunctionMinimisationProblem">
			<dataSetBuilder class="problem.dataset.AssociatedPairDataSetBuilder" numberOfClusters="10">
<!--				<dataSet class="problem.dataset.LocalDataSet" file="/home/tcloete/MSc/uci_datasets/ml_repository/iris/iris.data" patternExpression=",\D*"/>-->
				<dataSet class="problem.dataset.LocalDataSet" file="data/generated02.txt" patternExpression=",Class[\d+]|,"/>
			</dataSetBuilder>
<!--			<function class="functions.continuous.ParametricWithQuantisationErrorFunction" domain="R(-10.0, 10.0)^20" w1="0.3" w2="0.3" w3="0.4"/>-->
			<function class="functions.continuous.NonParametricClusteringFunction" domain="R(-10.0, 10.0)^20"/>
<!--			<function class="functions.continuous.QuantisationErrorFunction" domain="R(-10.0, 10.0)^20"/>-->
<!--			<function class="functions.continuous.ParametricClusteringFunction" domain="R(-10.0, 10.0)^20" w1="0.5" w2="0.5"/>-->
		</problem>

		<measurements class="simulator.MeasurementSuite" resolution="1" samples="1" file="data/clustering-gbest-pso-output.txt">
			<addMeasurement class="measurement.single.Fitness" />
			<addMeasurement class="measurement.single.BestParticlePosition" />
		</measurements>
	</simulation>
</simulator>
