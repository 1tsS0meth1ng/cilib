<?xml version="1.0"?>
<!DOCTYPE simulator [
<!ATTLIST algorithm id ID #IMPLIED>
<!ATTLIST problem id ID #IMPLIED>
<!ATTLIST measurements id ID #IMPLIED>
]>
<simulator>
    <algorithms>
        <!--Lovberg XPSO-->
        <algorithm id="xpso-lovbjerg-hybrid" class="pso.PSO">
            <iterationStrategy class="pso.iterationstrategies.PSOCrossoverIterationStrategy">
                <crossoverOperation class="pso.crossover.HybridCrossoverOperation">
                    <offspringUpdate class="pso.crossover.HybridOffspringUpdateStrategy"/>
                    <crossoverStrategy class="entity.operators.crossover.ArithmeticCrossover">
                        <crossoverProbability class="controlparameter.ConstantControlParameter" parameter="0.2"/>
                    </crossoverStrategy>
                </crossoverOperation>
            </iterationStrategy>
            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition" target="2000"/>
        </algorithm>

        <algorithm id="xpso-gliw-glac-arithmetic" class="pso.PSO">
            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
                <entityType class="pso.particle.StandardParticle">
                    <velocityProvider class="pso.velocityprovider.GlobalLocalBestVelocityProvider"/>
                </entityType>
            </initialisationStrategy>

            <iterationStrategy class="pso.iterationstrategies.PSOCrossoverIterationStrategy">
                <crossoverOperation class="pso.crossover.HybridCrossoverOperation">
                    <offspringUpdate class="pso.crossover.NullOffspringUpdateStrategy"/>
                    <crossoverStrategy class="entity.operators.crossover.ArithmeticCrossover">
                        <crossoverProbability class="controlparameter.ConstantControlParameter" parameter="1.0"/>
                    </crossoverStrategy>
                </crossoverOperation>
            </iterationStrategy>
            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition" target="2000"/>
        </algorithm>

        <algorithm id="xpso-gliw-fac-arithmetic" class="pso.PSO">
            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
                <entityType class="pso.particle.StandardParticle">
                    <velocityProvider class="pso.velocityprovider.GlobalLocalBestVelocityProvider">
                        <acceleration class="controlparameter.ConstantControlParameter" parameter="2.0"/>
                    </velocityProvider>
                </entityType>
            </initialisationStrategy>

            <iterationStrategy class="pso.iterationstrategies.PSOCrossoverIterationStrategy">
                <crossoverOperation class="pso.crossover.HybridCrossoverOperation">
                    <offspringUpdate class="pso.crossover.NullOffspringUpdateStrategy"/>
                    <crossoverStrategy class="entity.operators.crossover.ArithmeticCrossover">
                        <crossoverProbability class="controlparameter.ConstantControlParameter" parameter="1.0"/>
                    </crossoverStrategy>
                </crossoverOperation>
            </iterationStrategy>
            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition" target="2000"/>
        </algorithm>

        <algorithm id="xpso-nmpco" class="pso.PSO">
            <iterationStrategy class="pso.iterationstrategies.NMPCOIterationStrategy"/>
            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition" target="2000"/>
        </algorithm>
    </algorithms>

    <problems>
        <problem id="spherical" class="problem.FunctionMinimisationProblem" domain="R(15:30)^30">
            <function class="functions.continuous.unconstrained.Griewank"/>
        </problem>
    </problems>

    <measurements id="fitness" class="simulator.MeasurementSuite" resolution="1">
        <addMeasurement class="measurement.single.Fitness"/>
    </measurements>

    <simulations>
        <simulation samples="1">
            <algorithm idref="xpso-nmpco"/>
            <problem idref="spherical"/>
            <measurements idref="fitness" />
            <output format="TXT" file="data/xpso-nmpco.txt" />
        </simulation>
        <simulation samples="1">
            <algorithm idref="xpso-lovbjerg-hybrid"/>
            <problem idref="spherical"/>
            <measurements idref="fitness" />
            <output format="TXT" file="data/xpso-lovbjerg-hybrid.txt" />
        </simulation>
        <simulation samples="1">
            <algorithm idref="xpso-gliw-glac-arithmetic"/>
            <problem idref="spherical"/>
            <measurements idref="fitness" />
            <output format="TXT" file="data/xpso-gliw-glac-arithmetic.txt" />
        </simulation>
        <simulation samples="1">
            <algorithm idref="xpso-gliw-fac-arithmetic"/>
            <problem idref="spherical"/>
            <measurements idref="fitness" />
            <output format="TXT" file="data/xpso-gliw-fac-arithmetic.txt" />
        </simulation>
    </simulations>
</simulator>
