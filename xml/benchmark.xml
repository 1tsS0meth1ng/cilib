<?xml version="1.0"?>

<!DOCTYPE simulator [
<!ATTLIST algorithm id ID #IMPLIED>
<!ATTLIST problem id ID #IMPLIED>
<!ATTLIST measurements id ID #IMPLIED>
]>

<simulator>

	<simulation>

		<algorithm id="gbest" class="pso.PSO">
			<velocityUpdate class="pso.velocityupdatestrategies.StandardVelocityUpdate">
				<inertiaWeight class="controlparameterupdatestrategies.ConstantUpdateStrategy" parameter="0.729844"/>
				<socialComponent class="pso.parameterupdatestrategies.AccelerationUpdateStrategy"> 
					<parameter value="1.49180"/>
					<randomiser class="math.random.KnuthSubtractive"/>
				</socialComponent>
				<cognitiveComponent class="pso.parameterupdatestrategies.AccelerationUpdateStrategy">
					<parameter value="1.49180"/>
					<randomiser class="math.random.KnuthSubtractive"/>
				</cognitiveComponent>
			</velocityUpdate>
			<addStoppingCondition class="stoppingcondition.MaximumIterations" iterations="10000"/>
		</algorithm>

		<problem class="problem.FunctionMinimisationProblem">
			<function class="functions.continuous.NastyBenchmark"/>
		</problem>

		<measurements class="simulator.MeasurementSuite">
			<file value="data/benchmark.txt"/>
			<resolution value="1000"/>
			<samples value="30"/>
			<addMeasurement class="measurement.single.Fitness"/>
			<addMeasurement class="measurement.single.Solution"/>
		</measurements>

	</simulation>

</simulator>
