<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE simulator [  
	<!ATTLIST algorithm id ID #IMPLIED>
	<!ATTLIST problem id ID #IMPLIED>
	<!ATTLIST measurements id ID #IMPLIED>
	]>
	
	<simulator>
		<algorithms>
			<algorithm id="ga" class="ec.ea.EA">
				<populationSize value="50" />
				<parentSelector class="ec.selectionoperators.TournamentSelection" tournamentSize="2"/>
				<crossProbability class="controlparameterupdatestrategies.ConstantUpdateStrategy" parameter="0.3"/>
				<crossover class="ec.crossoveroperators.ArithmeticCrossOver" />
				<mutationProbability class="controlparameterupdatestrategies.ConstantUpdateStrategy" parameter="0.7"/>
				<mutator class="ec.mutationoperators.GaussianMutation" />
				<!--					<geneselectionrate class="ControlParameterUpdateStrategies.ConstantUpdateStrategy" parameter="0.25"/>
			</mutator>-->
				<generationGap value="7" />
				<nextGenerationSurvivalSelector class="ec.selectionoperators.Elitism" />
				<nextGenerationOffSpringSelector class="ec.selectionoperators.RandomSelection" />
				<addStoppingCondition class="stoppingcondition.MaximumIterations" iterations="10000" />
			</algorithm>
		</algorithms>
		
		<problems>
			<problem id="spherical" class="problem.FunctionMinimisationProblem">
				<function class="functions.continuous.AngleModulation" precision="2" domain="R(-1.0,1.0)^4">
					<function class="functions.continuous.Spherical" domain="R(-5.12,5.12)^30"/>
				</function>
			</problem>
			<problem id="rosenbrock" class="problem.FunctionMinimisationProblem">
				<function class="functions.continuous.AngleModulation" precision="3" domain="R(-1.0,1.0)^4">
					<function class="functions.continuous.Rosenbrock" domain="R(-2.048,2.048)^30" />
				</function>
			</problem>
			<problem id="griewank" class="problem.FunctionMinimisationProblem">
				<function class="functions.continuous.AngleModulation" precision="3" domain="R(-1.0,1.0)^4">
					<function class="functions.continuous.Griewank" domain="R(-300.0,300.0)^30"/>
				</function>
			</problem>
			<problem id="ackley" class="problem.FunctionMinimisationProblem">
				<function class="functions.continuous.AngleModulation" precision="2" domain="R(-1.0,1.0)^4">
					<function class="functions.continuous.Ackley" domain="R(-30.0,30.0)^30"/>
				</function>
			</problem>
			<problem id="rastrigin" class="problem.FunctionMinimisationProblem">
				<function class="functions.continuous.AngleModulation" precision="2" domain="R(-1.0,1.0)^4">
					<function class="functions.continuous.Rastrigin" domain="R(-5.12,5.12)^30" />
				</function>
			</problem>
		</problems>
		
		<measurements id="measurements" class="simulator.MeasurementSuite" samples="1" resolution="10">
			<addMeasurement class="measurement.single.Fitness" />
			<addMeasurement class="measurement.single.Solution" />
		</measurements>

		<simulations>
			<simulation>
				<algorithm idref="ga" />
				<problem idref="spherical" />
				<measurements idref="measurements" file="data/amga-spherical.txt" />
			</simulation>
			<simulation>
				<algorithm idref="ga" />
				<problem idref="rosenbrock" />
				<measurements idref="measurements" file="data/amga-rosenbrock.txt" />
			</simulation>
			<simulation>
				<algorithm idref="ga" />
				<problem idref="griewank" />
				<measurements idref="measurements" file="data/amga-griewank.txt" />
			</simulation>
			<simulation>
				<algorithm idref="ga" />
				<problem idref="ackley" />
				<measurements idref="measurements" file="data/amga-ackley.txt" />
			</simulation>
					<simulation>
				<algorithm idref="ga" />
				<problem idref="rastrigin" />
				<measurements idref="measurements" file="data/amga-rastrigin.txt" />
		</simulation>
	</simulations>
	</simulator>

