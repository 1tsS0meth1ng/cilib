<?xml version="1.0"?>

<simulator>

	<simulation>

		<algorithm class="algorithm.SplitCoOperativeOptimisationAlgorithm">
			<participants value="5"/>
			<algorithmFactory class="xml.XMLAlgorithmFactory">
				<algorithm class="pso.GCPSO">
					<topology class="entity.topologies.LBestTopology" neighbourhoodSize="3"/>
				</algorithm>
			</algorithmFactory>
			<addStoppingCondition class="stoppingcondition.MaximumFitnessEvaluations">
				<evaluations>200000</evaluations>
			</addStoppingCondition>

		</algorithm>

		<problem class="problem.FunctionMinimisationProblem">
			<function class="functions.continuous.Schwefel" />
		</problem>

		<measurements class="simulator.MeasurementSuite" file="data/splitcooperative-pso-schwefel.txt" resolution="10">
			<addMeasurement class="measurement.FitnessEvaluations" />
			<addMeasurement class="measurement.FunctionOptimisationError" />
		</measurements>

	</simulation>

</simulator>
