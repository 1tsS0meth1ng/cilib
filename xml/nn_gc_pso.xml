<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE simulator [
	<!ATTLIST algorithm id ID #IMPLIED>
	<!ATTLIST problem id ID #IMPLIED>
	<!ATTLIST measurements id ID #IMPLIED>
]>

<simulator>
	<algorithms>
		<algorithm id="gcpso" class="pso.GCPSO">
			<particles value="10"/>
			<topology class="entiy.topologies.GBestTopology"/>
			<addStoppingCondition class="stoppingcondition.MaximumIterations" iterations="10000"/>
		</algorithm>
	</algorithms>


	<problems>
		<problem id="problem1" class="problem.FunctionLearningProblem">
			<function class="functions.continuous.Ackley" domain="R(-10, 10)^2"/>
			<neuralNetwork class="neuralnetwork.NN" sizeIL="3" sizeHL="10" sizeOL="1"/>
		</problem>
	</problems>


	<measurements id="gcpso measurements" class="simulator.MeasurementSuite" samples="1" resolution="100">
		<addMeasurement class="measurement.single.Fitness" />
	</measurements>


	<simulations>
		<simulation>
			<algorithm idref="gcpso" />
			<problem idref="problem1" />
			<measurements idref="gcpso measurements" file="problem1-gcpso-solution.txt"/>
		</simulation>
	</simulations>
</simulator>
