<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE simulator [
  <!ATTLIST algorithm id ID #IMPLIED>
  <!ATTLIST problem id ID #IMPLIED>
  <!ATTLIST measurements id ID #IMPLIED>
]>

<simulator>
	<algorithms>
		
		<algorithm id="A1" class="pso.NichePSO">
			<addStoppingCondition class="stoppingcondition.MaximumIterations" MaximumIterations="2000" />
			<particles value="30"/>
			
			<mergeStrategy class="pso.niching.GBestMergeStrategy">
				<threshold class="controlparameter.ConstantControlParameter" parameter="0.001" />
			</mergeStrategy>
			<absorptionStrategy class="pso.niching.GBestAbsorptionStrategy" />
			<swarmCreationStrategy class="pso.niching.FitnessDeviationCreationStrategy">
				<threshold class="controlparameter.ConstantControlParameter" parameter="0.0001" />
			</swarmCreationStrategy>
			<maxima value="1.0" />
		</algorithm>
		
		<algorithm id="A11" class="pso.NichePSO">
			<addStoppingCondition class="stoppingcondition.MaximumIterations" MaximumIterations="2000" />
			<particles value="20"/>
			
			<mergeStrategy class="pso.niching.GBestMergeStrategy">
				<threshold class="controlparameter.ConstantControlParameter" parameter="0.01" />
			</mergeStrategy>
			<absorptionStrategy class="pso.niching.GBestAbsorptionStrategy" />
			<swarmCreationStrategy class="pso.niching.FitnessDeviationCreationStrategy">
				<threshold class="controlparameter.ConstantControlParameter" parameter="0.0001" />
			</swarmCreationStrategy>
			<maxima value="200.0" />
		</algorithm>
		
	</algorithms>

	<problems>
		
		<problem id="multimodal f1" class="problem.FunctionMaximisationProblem">
			<function class="functions.continuous.MultimodalFunction1" domain="R(0, 1)^1"/>
		</problem>
		
		<problem id="multimodal f2" class="problem.FunctionMaximisationProblem">
			<function class="functions.continuous.MultimodalFunction2" domain="R(0, 1)^1"/>
		</problem>
		
		<problem id="multimodal f3" class="problem.FunctionMaximisationProblem">
			<function class="functions.continuous.MultimodalFunction3" domain="R(0, 1)"/>
		</problem>
		
		<problem id="multimodal f4" class="problem.FunctionMaximisationProblem">
			<function class="functions.continuous.MultimodalFunction4" domain="R(0, 1)^1"/>
		</problem>
		
		<problem id="multimodal f5" class="problem.FunctionMaximisationProblem">
			<function class="functions.continuous.MultimodalFunction5" domain="R(-6, 6)^2"/>
		</problem>
		
	</problems>

	<measurements id="measurementsF1" class="simulator.MeasurementSuite" samples="30" resolution="2000">
		<addMeasurement class="measurement.multiple.MultipleModalF1" />
	</measurements>
	
	<measurements id="measurementsF2" class="simulator.MeasurementSuite" samples="30" resolution="2000">
		<addMeasurement class="measurement.multiple.MultipleModalF2" />
	</measurements>
	
	<measurements id="measurementsF3" class="simulator.MeasurementSuite" samples="30" resolution="2000">
		<addMeasurement class="measurement.multiple.MultipleModalF3" />
	</measurements>
	
	<measurements id="measurementsF4" class="simulator.MeasurementSuite" samples="30" resolution="2000">
		<addMeasurement class="measurement.multiple.MultipleModalF4" />
	</measurements>
	
	<measurements id="measurementsF5" class="simulator.MeasurementSuite" samples="30" resolution="2000">
		<addMeasurement class="measurement.multiple.MultipleModalF5" />
	</measurements>

	<simulations>

	<simulation>
			<algorithm idref="A1" />
			<problem idref="multimodal f1" />
			<measurements idref="measurementsF1" file="output/A1/f1.txt" />
		</simulation>

		<simulation>
			<algorithm idref="A1" />
			<problem idref="multimodal f2" />
			<measurements idref="measurementsF2" file="output/A1/f2.txt" />
		</simulation>
		
		<simulation>
			<algorithm idref="A1" />
			<problem idref="multimodal f3" />
			<measurements idref="measurementsF3" file="output/A1/f3.txt" />
		</simulation>
		
		<simulation>
			<algorithm idref="A1" />
			<problem idref="multimodal f4" />
			<measurements idref="measurementsF4" file="output/A1/f4.txt" />
		</simulation>
	
		<simulation>
			<algorithm idref="A11" />
			<problem idref="multimodal f5" />
			<measurements idref="measurementsF5" file="output/A1/f5.txt2" />
		</simulation>
		
	</simulations>

</simulator>
