<?xml version="1.0"?>

<simulator>

	<simulation>

		<algorithm class="algorithm.MultistartOptimisationAlgorithm">
			<targetAlgorithm class="algorithm.SplitCoOperativeOptimisationAlgorithm">
				<participants value="30"/>
				<algorithmFactory class="xml.XMLAlgorithmFactory">
					<algorithm class="pso.PSO">
						<topology class="entity.topologies.LBestTopology" neighbourhoodSize="3"/>
					</algorithm>
				</algorithmFactory>
			</targetAlgorithm>

			<addRestartCondition class="stoppingcondition.MaximumFitnessEvaluations">
				<maximumFitnessEvaluations>20000</maximumFitnessEvaluations>
			</addRestartCondition>

			<addStoppingCondition class="stoppingcondition.MaximumFitnessEvaluations">
				<maximumFitnessEvaluations>200000</maximumFitnessEvaluations>
			</addStoppingCondition>

		</algorithm>

		<problem class="problem.FunctionMinimisationProblem">
			<function class="functions.continuous.Schwefel" />
		</problem>

		<measurements class="simulator.MeasurementSuite" file="data/multistart-cooperative-pso-schwefel.txt" resolution="10">
			<addMeasurement class="measurement.generic.Restarts" /> 
			<addMeasurement class="measurement.single.FitnessEvaluations" />
			<addMeasurement class="measurement.single.FunctionOptimisationError" />
		</measurements>

	</simulation>

</simulator>
