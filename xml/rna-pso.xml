<?xml version="1.0"?>

<!DOCTYPE simulator [
<!ATTLIST algorithm id ID #IMPLIED>
<!ATTLIST problem id ID #IMPLIED>
<!ATTLIST measurements id ID #IMPLIED>
]>

<simulator>

	<algorithms>
		<algorithm id="rnapso" class="bioinf.RNAPSO">
			<initialiser class="bioinf.RNAInitialiser"/>  	
			<topology class="entity.topologies.VonNeumannTopology" />
			<prototypeParticle class="bioinf.RNAParticle"/>
			<addStoppingCondition class="stoppingcondition.MaximumIterations" iterations="2000"/>
			<particles value="2"/>
			<velocityUpdate class="bioinf.RNAVelocityUpdate" />
		</algorithm>
	</algorithms>

	<problems> 
		<problem id="rnaprob" class="bioinf.RNAOptimisationProblem">
			<fitnessCalculator class="bioinf.SimpleRNAFitness" />
			<dataSet class="simulator.LocalDataSet" file="data/rna-input.txt"/>
		</problem>

	</problems>

	<measurements id="fitness" class="simulator.MeasurementSuite" resolution="1" samples="1">
		<addMeasurement class="measurement.Fitness"/>
		<addMeasurement class="bioinf.RNAStructureMeasurement"/>
	</measurements>

	<simulations>
		<simulation>
			<algorithm idref="rnapso"/>
			<problem idref="rnaprob"/>
			<measurements idref="fitness" file="data/rna.txt"/>
		</simulation>
	</simulations>
</simulator>
