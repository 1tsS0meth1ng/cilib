<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE simulator [
  <!ATTLIST algorithm id ID #IMPLIED>
  <!ATTLIST problem id ID #IMPLIED>
  <!ATTLIST measurements id ID #IMPLIED>
]>

<simulator>

    <algorithms>
        <algorithm id="ea" class="EC.EA.EA" numberOfOffspring="20" mutationProbability="0.7">
          <parentSelector class="EC.Selector.RandomSelector" />
          <nextGenerationSelector class="EC.Selector.ElitismSelector" />
          <mutator class="EC.Mutator.GaussianMutator" />
          <reproducer class="EC.Reproducer.UniformReproducer" />
      	  <population class="EC.EA.Population" size="50" />
          <addStoppingCondition class="StoppingCondition.MaximumIterations" iterations="1000" />
        </algorithm>
    </algorithms>

    <problems>
        <problem id="spherical" class="Problem.FunctionMinimisationProblem">
            <function class="Functions.Spherical" dimension="2">
                <domain class="Problem.Domain" lowerBound="-1.0" upperBound="1.0"/>
            </function> 
        </problem>
    </problems>

    <measurements id="measurements" class="Simulator.MeasurementSuite" samples="1" resolution="10">
        <addMeasurement class="Measurement.FitnessEvaluations" />
        <addMeasurement class="Measurement.FunctionMinimisationError" />
    </measurements>

    <simulations>
        <simulation>
            <algorithm idref="ea" />
            <problem idref="spherical" />
            <measurements idref="measurements" file="ga-spherical.txt" />
        </simulation>
    </simulations>



</simulator>