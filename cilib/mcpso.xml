<?xml version="1.0"?>

<simulator>

    <simulation>

        <algorithm class="Algorithm.MultistartOptimisationAlgorithm">
            <optimisationAlgorithm class="Algorithm.CoOperativeOptimisationAlgorithm">
                <participants value="30"/>
                <algorithmFactory class="XMLAlgorithmFactory">
                    <algorithm class="PSO.PSO">
                        <topology class="PSO.LBestTopology" neighbourhoodSize="3"/>
                    </algorithm>
                </algorithmFactory>
            </optimisationAlgorithm>
            
            <addRestartCondition class="StoppingCondition.MaximumFitnessEvaluations">
                <evaluations>20000</evaluations>
            </addRestartCondition>
			
            <addStoppingCondition class="StoppingCondition.MaximumFitnessEvaluations">
                <evaluations>200000</evaluations>
            </addStoppingCondition>
            
        </algorithm>
    
        <problem class="Problem.FunctionMinimisationProblem">
            <function class="Functions.Schwefel" />
        </problem>

        <measurements class="Simulator.MeasurementSuite" file="multistart-cooperative-pso-schwefel.txt" resolution="10">
            <addMeasurement class="Measurement.Restarts" /> 
            <addMeasurement class="Measurement.FunctionMinimisationError" />
        </measurements>
        
     </simulation>
        
</simulator>