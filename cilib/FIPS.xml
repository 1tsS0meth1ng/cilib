<?xml version="1.0"?>

<!DOCTYPE simulator [
<!ATTLIST algorithm id ID #IMPLIED>
<!ATTLIST problem id ID #IMPLIED>
<!ATTLIST measurements id ID #IMPLIED>
]>

<simulator>

   <algorithms>
      <algorithm id="gbest" class="PSO.PSO">
        <addStoppingCondition class="StoppingCondition.MaximumIterations" iterations="10000">
	</addStoppingCondition>
	<particles value="20"/>
	<velocityUpdate class="PSO.FIPSVelocityUpdate">
		<inertiaComponent class="PSO.LinearDecreasingInertia"/>
		<socialComponent class="PSO.FIPSAcceleration" acceleration="1.0"/>	
	</velocityUpdate>
      </algorithm>
   </algorithms>
   
   <problems> 
      <problem id="spherical" class="Problem.FunctionMinimisationProblem">
         <function class="Functions.Spherical"/>
      </problem>
   </problems>

   <measurements id="fitness" class="Simulator.MeasurementSuite" resolution="5" samples="1">
      <addMeasurement class="Measurement.Fitness"/>
   </measurements>

   <simulations>
      <simulation>
         <algorithm idref="gbest"/>
	 <problem idref="spherical"/>
	 <measurements idref="fitness" file="data/spherical.FIPS.p20w0.7298c3NoVmax.txt"/>
      </simulation>
   </simulations>
</simulator>
